@{
    ViewData["Title"] = "Admin";
}
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow" style="max-width: 400px; width: 100%; min-height: 500px;">
        <div class="card-header bg-dark text-white text-center">
            <h4>Admin</h4>
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form asp-action="Admin" asp-controller="Admin" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">E-posta Adresi</label>
                    <input type="text" class="form-control" id="AdminAd" name="AdminAd" placeholder="Ad" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="AdminPassword" name="AdminPassword" placeholder="Parola" required>
                </div>
                <button type="submit" class="btn btn-dark w-100">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>
