@{
    ViewData["Title"] = "Profil";
    Layout = "ProfilLayout";
    string Ad = Context.Session.GetString("KullaniciAd");
    string Email = Context.Session.GetString("KullaniciEmail");
}
<head>
    <link href="~/css/Profil.css" rel="stylesheet" />
</head>

<section class="profile-section">
    <div class="container">
        <h1 class="section-title">Profilim</h1>
        <div class="profile-card">
            <!-- Fotoğraf -->
            <div class="profile-photo">
                <img src="\img\profil.jpg" alt="Profil Fotoğrafı">
                <button class="edit-btn">Fotoğrafı Düzenle</button>
            </div>

            <!-- Profil Bilgileri -->
            <div class="profile-info">
                <div class="info-item">
                    <label>Ad:</label>
                    <span>@Ad</span>
                </div>
                <div class="info-item">
                    <label>Email:</label>
                    <span>@Email</span>
                </div>
                <div class="info-item">
                    <label>Şifre:</label>
                    <span>********</span>
                </div>
            </div>
        </div>
        <div class="edit-button-container">
            <a asp-controller="Kullanici" asp-action="Duzenle"><button asp-controller="Kullanici" asp-action="Duzenle" class="edit-btn">Düzenle</button></a>
        </div>
    </div>
</section>