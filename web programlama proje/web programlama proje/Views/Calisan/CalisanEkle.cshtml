@model web_programlama_proje.Models.Calisan

@{
    ViewData["Title"] = "Çalışan Ekle";
    Layout = "_AdminLayout";
}

<div class="admin-content">
    <div class="content-box">
        <h1 class="text-center mb-4">Çalışan Ekle</h1>
        <form asp-action="CalisanEkle" method="post">
            <div class="form-group">
                <label for="CalisanAd">Ad</label>
                <input type="text" class="form-control" id="CalisanAd" name="CalisanAd" />
            </div>
            <div class="form-group">
                <label for="CalisanEmail">Email</label>
                <input type="email" class="form-control" id="CalisanEmail" name="CalisanEmail" />
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </form>
    </div>
</div>
