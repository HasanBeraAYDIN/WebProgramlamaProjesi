@model web_programlama_proje.Models.CalisanHizmet

@{
    ViewData["Title"] = "Çalışan Hizmeti Ekle";
    Layout = "_AdminLayout";
}

<div class="admin-content">
    <div class="content-box">
        <h1 class="text-center mb-4">Çalışan Hizmeti Ekle</h1>
        <form asp-action="Ekle" method="post">
            <div class="form-group">
                <label asp-for="CalisanId" class="control-label">Çalışan Seçin</label>
                <select asp-for="CalisanId" class="form-control">
                    <option value="">Seçin...</option>
                    @foreach (var calisan in ViewBag.Calisanlar)
                    {
                        <option value="@calisan.CalisanId">@calisan.CalisanAd</option>
                    }
                </select>
                <span asp-validation-for="CalisanId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HizmetId" class="control-label">Hizmet Seçin</label>
                <select asp-for="HizmetId" class="form-control">
                    <option value="">Seçin...</option>
                    @foreach (var hizmet in ViewBag.Hizmetler)
                    {
                        <option value="@hizmet.HizmetId">@hizmet.HizmetAd</option>
                    }
                </select>
                <span asp-validation-for="HizmetId" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg me-3">Ekle</button>
            </div>
        </form>
    </div>
</div>

