@model IEnumerable<web_programlama_proje.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}
<link href="~/css/AdminRandevular.css" rel="stylesheet" />
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Randevularım</h1>
        </div>
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Çalışan</th>
                    <th>Hizmet</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.RandevuTarih.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@randevu.Durum</td>
                        <td>@randevu.Calisan?.CalisanAd</td>
                        <td>@randevu.Hizmet?.HizmetAd</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <strong>Bu kullanıcı için randevu bulunamadı.</strong>
        </div>
    }
</div>
</div>