@model IEnumerable<web_programlama_proje.Models.Hizmet>

@{
    ViewData["Title"] = "Çalışan Listesi";
    Layout = "_AdminLayout";
}

<h1 class="text-center mb-4">Himetler Listesi</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var hizmet in Model)
                {
                    <tr>
                        <td>@hizmet.HizmetId</td>
                        <td>@hizmet.HizmetAd</td>
                        <td>
                            @hizmet.HimzetUcret

                        </td>
                        <td>
                            <a href="@Url.Action("Sil", "Calisan", new { id = hizmet.HizmetId })" class="btn btn-danger btn-sm ml-2" title="Sil">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Hiç çalışan bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("CalisanEkle", "Calisan")" class="btn btn-primary btn-lg">Çalışan Ekle</a>
</div>