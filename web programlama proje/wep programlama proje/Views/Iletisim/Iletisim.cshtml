@{
    ViewData["Title"] = "İlettişim";
}
<head>

<link href="~/css/Iletisim.css" rel="stylesheet" />

</head>

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Bizimle İletişime Geçin</h2>
        <p class="text-muted">Her türlü soru, öneri veya randevu için bizimle iletişime geçebilirsiniz.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="SubmitContactForm" asp-controller="Contact" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Ad Soyad</label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Adınız ve Soyadınız" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="E-posta adresiniz" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Mesajınız</label>
                            <textarea id="message" name="message" class="form-control" rows="5" placeholder="Mesajınızı buraya yazın" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-4 text-center">
            @ViewBag.Message
        </div>
    }
</div>
