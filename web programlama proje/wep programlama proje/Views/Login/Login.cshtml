@{
    ViewData["Title"] = "Giriş Yap";
}
@model Musteri

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow" style="max-width: 400px; width: 100%; min-height: 500px;">
        <div class="card-header bg-dark text-white text-center">
            <h4>Giriş Yap</h4>
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta Adresi</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
                </div>
                <button type="submit" class="btn btn-dark w-100">Giriş Yap</button>
            </form>
            <div class="text-center mt-3">
                <span>Hesabınız yok mu?</span>
                <a asp-action="Kayit" asp-controller="Kayit" class="btn btn-link">Kayıt Ol</a>
            </div>
        </div>
    </div>
</div>
